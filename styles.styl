//   transform translate(0, 0)

// mixin flexibleCenteredContainer(width)
//   margin-left auto
//   margin-right auto
//   position relative
//   min-width 320px
//   max-width width
*, *:before, *:after
  -moz-box-sizing border-box
  -webkit-box-sizing border-box
  box-sizing border-box

body
  margin 0
  padding 0
  font-family 'PT Sans', 'Helvetica Neue', Helvetica

header
  // +flexibleCenteredContainer(480px)
  margin-left auto
  margin-right auto
  position relative
  min-width 320px
  max-width 480px

  img
    max-width 100%

section
  background #CB3837
  color white

  #content
    margin-left auto
    margin-right auto
    position relative
    padding: 20px 20px 100px 20px
    min-width 320px
    max-width 640px

    h2
      text-align: center

    p
      font-size 18px
      line-height 1.4
      color rgba(255,255,255,0.8)
      // text-align center
      // text-align justify

    a
      color white

    .footer
      p
        text-align center
